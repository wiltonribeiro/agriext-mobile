<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boundary.Activites.StationChoice">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/house_flat_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="SE CONECTE A  ESTAÇÃO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSpeakerStation"
                android:layout_gravity="center"
                android:background="@drawable/speaker"
                android:layout_width="45dp"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAlignment="center"
                android:text="CONECTAR NA ESTAÇÃO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSpeakerStartWatering"
                android:layout_gravity="center"
                android:background="@drawable/speaker"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <ImageButton
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/wifi_signal"
            android:id="@+id/btnConnectToWifi"
            android:background="@drawable/corner_white"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp" />



    </LinearLayout>

</RelativeLayout>